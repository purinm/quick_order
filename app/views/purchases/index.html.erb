 <%= render "devise/shared/header" %>
 <%= form_with model:@purchase,url: table_purchases_path, local: true, id: 'charge-form' do |f| %>  

 <div>
  <%= f.label :total_cost %><br />
  <p>合計金額<%=f.number_field :total_cost, value:@orderObject[:total],readonly:true	%> 円 </p> 
  </div>
    <%# カード情報の入力 %>
    <div>
      <p>クレジットカード情報入力 </p>
      <div >
        <div>
          <label >カード番号</label>
          <span >必須</span>
        </div>
        <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
      </div>
      <div >
        <div>
          <label >有効期限</label>
          <span >必須</span>
        </div>
        <div >
          <%= f.select :exp_month, 1..12, {include_blank: "---"}, id:"card-exp-month",class: "exp_month" %>
          <p>月</p>
          <%= f.select :exp_year, 20..29, {include_blank: "---"}, id:"card-exp-year",class: "exp_year" %>
          <p>年</p>
        </div>
      </div>
      <div >
        <div >
          <label >セキュリティコード</label>
          <span >必須</span>
        </div>
        <%= f.text_field :cvc, class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
       <%= f.submit "支払い確定" ,class:"buy-red-btn" %>
    </div>
    <%end%>
    <%# /カード情報の入力 %>