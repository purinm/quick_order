      <%= image_tag item.image.variant(resize: '100x100'), class: "item-img" %>
    </div>

      <div class='item-info'>
        <h3 class='item-name'><%= item.name %></h3>
        <div ><%= item.cost %>円<br></div>
      </div>
      <% if  current_user.host_name.present?%>
        <%= link_to "削除",item_path(@item.id), method: :delete %> 
      <% end %>
